<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
	"-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
	"https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
	<!-- suppress the @EventHandler ignoreCancelled check for bungee, as that EventHandler does not have this attribute -->
	<suppress files=".*[\\/]\w+Bungee\.java"
			  checks="RegexpSinglelineJava"
			  message="Event handlers must specify ignoreCancelled"/>
</suppressions>
